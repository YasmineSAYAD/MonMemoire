<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OrientationActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Pour commencer votre mémoire vous devez:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="-Collecter le maximum d&apos;informations qui concernent votre thème."
                android:textAppearance="?android:attr/textAppearanceMedium" />

 <TextView
     android:id="@+id/textView3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="-Eviter wikipédia comme source d&apos;informations."
     android:textAppearance="?android:attr/textAppearanceMedium" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="299dp"
      android:layout_height="wrap_content"
      android:text="-Lire, comprendre et résumer toutes les informations collectées."
      android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="-Commencer par la rédaction de l&apos;introduction générale puis les chapitres et finalement la conclusion générale."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Eviter d&apos;utiliser &quot;Je&quot;, &quot;nous&quot;, &quot;on&quot;"
        android:textAppearance="?android:attr/textAppearanceMedium" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="-Construire la bibliographie simultanément à la rédaction."
          android:textAppearance="?android:attr/textAppearanceMedium" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp" >

           <Button
               android:id="@+id/buttq"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#0000ff"
               android:text="Quitter" />

           <Button
               android:id="@+id/buttr"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="130dp"
               android:layout_weight="0.21"
               android:background="#0000ff"
               android:text="Retour" />

       </LinearLayout>

        </LinearLayout>
    </ScrollView>

   

</RelativeLayout>