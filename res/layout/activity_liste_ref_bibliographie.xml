<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ListeRefBibliographieActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Comment lister les références ?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

  

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="296dp"
                android:layout_height="78dp"
                android:text="-Les références bibliographiques sont citées dans le texte par [x] où x est un numéro (étiquette). "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Le plus tôt possible après l&apos;énoncé du fait."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="-En milieu ou fin de phrase."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="-Ne donnez pas de références dans la bibliographie si celles-ci ne sont pas réellement citées dans le texte. "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                android:text="-Ne citez pas des références que vous n&apos;avez pas consultées."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                android:text="-&quot;et al.&quot; (abréviation de &quot;et alii&quot; du latin qui signifie &quot;et les  autres&quot;)."
                android:textAppearance="?android:attr/textAppearanceMedium" />
              <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

                  <Button
                      android:id="@+id/clicqui"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="130dp"
                      android:text="Quitter"
                      android:background="#0000ff" />

                     <Button
                         android:id="@+id/clicret"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Retour"
                         android:background="#0000ff" />

    </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>